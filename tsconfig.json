{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@modules/*": [
        "modules/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "dist",
    "src/**/*.test.ts"
  ]
}